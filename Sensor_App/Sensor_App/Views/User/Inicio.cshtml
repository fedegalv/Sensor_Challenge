@{
    ViewData["Title"] = "Log In";
}

<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />

    <!-- ================== BEGIN BASE CSS STYLE ================== -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">


    <link href="~/assets/css/app.min.css" rel="stylesheet" />
    <!-- ================== END BASE CSS STYLE ================== -->
</head>

<div class="row top30">
    <div class="col">
        <h1>Menu de inicio, para acceder al ABM debe de estar autenticado</h1>
    </div>
</div>
<p id="loginMessage" style="color: darkgreen;">
    Inicio sesion correctamente
</p>
<p id="logoutMessage" style="color: darkgreen;">
    Cerrado sesion correctamente
</p>

<div class="row top30">
    <div class="col">
        <button type="button" id="loginButton" onclick="showInPopup('@Url.Action("LogIn","User", null, Context.Request.Scheme)', 'Login')" class="btn btn-primary btn-lg btn-block">Mostrar LogIn</button>
    </div>
</div>
<div class="row top30">
    <div class="col">
        <button type="button" onclick="@("window.location.href='" + @Url.Action("ListaUsuarios", "User") + "'");"  class="btn btn-primary btn-lg btn-block">Listado Usuarios y ABM</button>
    </div>
    <div class="col">
        <button type="button" onclick="@("window.location.href='" + @Url.Action("ListaClientes", "Cliente") + "'");" class="btn btn-primary btn-lg btn-block">Listado Clientes y ABM</button>
    </div>
    <div class="col">
        <button type="button" onclick="@("window.location.href='" + @Url.Action("Vermapa", "Mapa") + "'");"class="btn btn-primary btn-lg btn-block">Visualizacion en mapa de Marcadores</button>
    </div>
</div>
<!-- ================== BEGIN BASE JS ================== -->

<script src="~/js/theme/default.min.js"></script>

<!-- ================== END BASE JS ================== -->
