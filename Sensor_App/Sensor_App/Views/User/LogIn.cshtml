@model Sensor_App.Models.LoginUserModel;
@{
    ViewData["Title"] = "Log In";
    Layout = null;
}

<head>
    <!-- ================== BEGIN BASE CSS STYLE ================== -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">


    <link href="~/assets/css/app.min.css" rel="stylesheet" />
    <!-- ================== END BASE CSS STYLE ================== -->
</head>

<!-- begin login -->
<div class="login login-v1">
    <!-- begin login-container -->
    <div class="login-container">
        <!-- begin login-header -->
        <div class="login-header">
            <div class="brand">
                <span class="logo"></span> <b>LogIn</b> Sensor APP
                <small>Ingrese sus credenciales para iniciar sesion</small>
            </div>
        </div>
        <!-- end login-header -->
        <!-- begin login-body -->
        <div class="login-body">
            <!-- begin login-content -->
            <div class="login-content">

                <form id="loginForm">
                    <div class="form-group m-b-20">
                        <input type="text" id="userId" name="Usuario" class="form-control form-control-lg inverse-mode" placeholder="Usuario o Email" required />
                    </div>

                    <div class="form-group m-b-20">
                        <input type="password" id="passwordId" name="Contrasenia" class="form-control form-control-lg inverse-mode" placeholder="Password" required />
                    </div>

                    <div class="login-buttons">
                        <button id="btnSubmit" type="button" class="btn btn-success btn-block btn-lg" onclick="Login()">LogIn</button>
                    </div>
                </form>



            </div>
            <!-- end login-content -->
            <p id="msg" style="color: red;">Credenciales incorrectas
            </p>
        </div>
        <!-- end login-body -->
    </div>
    <!-- end login-container -->
</div>
<!-- end login -->
<!-- end page container -->
<!-- ================== BEGIN BASE JS ================== -->
<script src="~/js/site.js"></script>
<script src="~/js/theme/default.min.js"></script>

<!-- ================== END BASE JS ================== -->