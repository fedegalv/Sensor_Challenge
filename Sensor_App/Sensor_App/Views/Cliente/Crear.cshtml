@model Sensor_App.Models.Cliente
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="Crear">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="RazonSocial" class="control-label col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="RazonSocial" class="form-control" />
                    <span asp-validation-for="RazonSocial" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group row">
                <label asp-for="NroSucursal" class="control-label col-sm-2 col-form-label"></label>
                <div class="col-sm-3">
                    <input asp-for="NroSucursal" class="form-control" />
                    <span asp-validation-for="NroSucursal" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group row">
                <label asp-for="Direccion" class="control-label col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Direccion" class="form-control" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group row">
                <label asp-for="Pais" class="control-label col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <input asp-for="Pais" class="form-control" />
                    <span asp-validation-for="Pais" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group row">
                <label asp-for="Ciudad" class="control-label col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Ciudad" class="form-control" />
                    <span asp-validation-for="Ciudad" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group row">
                <label asp-for="CodPostal" class="control-label col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="CodPostal" class="form-control" />
                    <span asp-validation-for="CodPostal" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group row">
                <label asp-for="Zona" class="control-label col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <select asp-for="Zona" class="form-control"></select>
                    <span asp-validation-for="Zona" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group row">
                <label asp-for="Telefono" class="control-label col-sm-2 col-form-label"></label>
                <div class="col-sm-3">
                    <input asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group row">
                <label asp-for="Fax" class="control-label col-sm-2 col-form-label"></label>
                <div class="col-sm-3">
                    <input asp-for="Fax" class="form-control" />
                    <span asp-validation-for="Fax" class="text-danger"></span>
                </div>
               
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="control-label col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group row">
                <label asp-for="Web" class="control-label col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Web" class="form-control" />
                    <span asp-validation-for="Web" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Activo" /> @Html.DisplayNameFor(model => model.Activo)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
